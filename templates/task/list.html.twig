{% extends "base.html.twig" %}

{% block content %}
<ul id="myUL">
  <button class="w3-button w3-teal"><a href="{{path('task_create')}}"> + Ajouter une tache</a></button><br><br><br>
  <div class="w3-padding w3-xlarge w3-teal">
    <i class="fa fa-file"></i>
        List des taches
  </div>
  {% for task in tasks %}
    <li>
      <div class="w3-bar">
      <span {% if task.completed %} class="checked" {% endif %}>{{ task.title }}</span>
      <button class="w3-button w3-right w3-2020-biscay-green w3-left-align " style="width:30%">
        <i class="fa fa-refresh">
          <a href="{{path('task_edit', {id: task.id})}}">Editer</a>
        </i>
      </button>
      <form method="POST" action="{{ path('task_delete', {'id': task.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
       <button class="w3-button  w3-2020-flame-scarlet w3-display-right" style="width:15%"><i class="fa fa-trash">Supprimer</i></button>
      </form> 
    </li>
    </div>
  {% endfor %}
</ul>
{% endblock %}