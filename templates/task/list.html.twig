{% extends "base.html.twig" %}

{% block content %}
<ul id="myUL">
  <a class="btn btn-default" href="{{path('task_create')}}">Ajouter une tache</a>

  {% for task in tasks %}
    <li>
      <span {% if task.completed %} class="checked" {% endif %}>{{ task.title }}</span>

      <a href="{{path('task_edit', {id: task.id})}}">Editer</a>
      <form method="POST" action="{{ path('task_delete', {'id': task.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
        <button type="submit" class="close">X</button>
      </form> 
    </li>
  {% endfor %}
</ul>
{% endblock %}